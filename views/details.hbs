<hr />

<div class="cardMovie">
  <img src="{{movie.image}}" alt="Film" width="300px" height="500px" />
  <div class="info">
    <a href="/movies">Go back</a>
    <h1>{{movie.title}}</h1>
    <h2>{{movie.director}}</h2>
    <h3>Stars</h3>
    <ul>
      {{#each movie.stars}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <p>{{movie.description}}</p>
    <ul class="showtimes">
      {{#each movie.showtimes}}
        <li>{{this}}</li>
        <li>|</li>
      {{/each}}
    </ul>
  </div>
</div>